<body>
    

    <div class="d-flex justify-content-center cContainer container">
        <div class="cWrapper wrapper">
            <h1 class="d-flex justify-content-center">
                <span class="bg-dark mb-4 cTitle" onclick="window.location.reload();">정산하기</span>
            </h1>
            <form action="">
                <div class="col">
                    <div class="col p-2 pb-2" id="addTarget">
                        <div class="p-3 row line">
                            <input type="text" class="form-control float-center text-center cName" placeholder="name1">
                            <div class="my-auto colon">
                                <span>:</span>
                            </div>
                            <input class="form-control float-end text-end cValue" placeholder="0" data-val="0" oninput="valueInputValid(this)">
                        </div>
                        <div class="p-3 row line d-flex justify-content-center">
                            <input type="text" class="form-control float-center text-center cName" placeholder="name2">
                            <div class="my-auto colon">
                                <span>:</span>
                            </div>
                            <input class="form-control float-end text-end cValue" placeholder="0" data-val="0" oninput="valueInputValid(this)">
                        </div>
                        <div class="p-3 row line">
                            <input type="text" class="form-control float-center text-center cName" placeholder="name3">
                            <div class="my-auto colon">
                                <span>:</span>
                            </div>
                            <input class="form-control float-end text-end cValue" placeholder="0" data-val="0" oninput="valueInputValid(this)">
                            <!-- <div class="col my-auto">
                                <span style="margin-left:-0.5em">원</span>
                            </div> -->
                        </div>
                    </div>
                    <div class="row mt-3 mb-5" style="margin:0 auto; width:90%">
                        <button type="button" class="btn-primary col rounded-3 cBtn" id="addButton">+</button>
                    </div>
                    <!-- background-color:#0A6FFC; -->
                    <div class="p-3 row mb-5 justify-content-center" id="submitButton" onclick="calculate()">
                        <div class="d-flex justify-content-center p-3 btn-animation" style="width:85px; height:81px; background-color: rgb(238, 238, 238); border-radius:50px;">
                            <img style="width:65px; height:47px; pointer-events : none;" src="/public/images/calculate.png" alt="">
                        </div>
                    </div>
                </div>
            </form>
            <!-- <div class="copyBox pt-2">
                <button><i class="fa fa-clone"></i></button>
            </div> -->
            <div class="p-3 bg-light resultContainer" id="resultContainer">
